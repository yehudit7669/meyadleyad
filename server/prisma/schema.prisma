  userId          String
  type            PendingApprovalType
  status          ApprovalStatus        @default(PENDING)
  requestData     Json                  // המידע שמבקשים לאשר
  oldData         Json?                 // המידע הקודם (לעריכה)
  reason          String?               // סיבת הבקשה (אופציונלי)
  adminNotes      String?               // הערות אדמין
